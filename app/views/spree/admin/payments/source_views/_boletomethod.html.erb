<fieldset data-hook="boleto">
  <legend>Boleto</legend>

  <table class="index">
    <tr>
			<th><%= Spree::BoletoDoc.human_attribute_name(:document_number) %></th>
      <th><%= t(:created_at) %></th>
      <th><%= Spree::BoletoDoc.human_attribute_name(:due_date) %></th>
      <th><%= Spree::BoletoDoc.human_attribute_name(:status) %></th>
      <th><%= Spree::BoletoDoc.human_attribute_name(:paid_at) %></th>
			<th></th>
    </tr>
    <tr>
			<td><%= payment.source.document_number %></td>
			<td><%= l payment.source.created_at %></td>
			<td><%= l payment.source.due_date %></td>
			<td><%= payment.source.status %></td>
			<td><%= payment.source.paid_at %></td>
			<% if payment.pending? %>
			<td>
				<%= render :partial => "spree/admin/boleto_docs/boleto_links", :object => payment.source, :as => :boleto_doc %>
			</td>
			<% end %>
    </tr>
  </table>
</fieldset>


