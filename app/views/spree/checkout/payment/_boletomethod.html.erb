<%= hidden_field "payment_source[#{payment_method.id}]", 'order_id', value: @order.id %>
<% (1..Spree::Boleto::Configuration[:parcelas]).each do |instalment| %>
	<p>
		<%= radio_button_tag "order[instalments]", instalment, @order.instalments == instalment %>
		<%= "#{instalment}x de #{number_to_currency(@order.total/instalment.to_f)}" %>
	</p>
<% end %>
